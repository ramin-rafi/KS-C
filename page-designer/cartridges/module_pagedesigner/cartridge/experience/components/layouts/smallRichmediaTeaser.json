{
    "name": "Small Richmedia Teaser",
    "description": "Image, text overlay that links user to a category using the markup editor",
    "group": "assets",
    "attribute_definition_groups": [{
        "id": "teaserOption",
        "name": "Teaser option",
        "description": "Please select Yes if you want to make it slider",
        "attribute_definitions": [{
            "id": "category",
            "name": "Category Link",
            "type": "category",
            "required": false
        },
        {
            "id": "brand",
            "name": "Brand",
            "type": "string",
            "required": false
        },
        {
            "id": "ctaLink",
            "name": "CTA Link (Optional if needs to add a more curated link other than category and brand)",
            "type": "url",
            "required": false
        },
        {
            "id": "text_link",
            "name": "CTA Text",
            "type": "string",
            "required": false
        },
        {
            "id": "headline_copy_allignment",
            "name": "Alligment of headline and copy",
            "type": "enum",
            "values": ["right", "left"],
            "default_value": "right",
            "required": true
        },
        {
            "id": "text_headline",
            "name": "Heading",
            "type": "string",
            "required": true
        },
        {
            "id": "teaser_text",
            "name": "Teaser Text",
            "description": "The text below Promotional Teaser.",
            "type": "string",
            "required": true
        },
        {
            "id": "sliderOption",
            "name": "Slider option",
            "type": "enum",
            "values": ["Yes", "No"],
            "default_value": "No",
            "required": true
        }]
    }],
    "region_definitions": [{
        "id": "slides",
        "name": "Slides",
        "max_components": 5,
        "component_type_exclusions": [{
                "type_id": "layouts.1column"
            },
            {
                "type_id": "layouts.2column"
            },
            {
                "type_id": "layouts.3column"
            },
            {
                "type_id": "layouts.4column"
            },
            {
                "type_id": "layouts.gridcomponentlayout"
            },
            {
                "type_id": "einstein.noanchorgrid"
            },
            {
                "type_id": "layouts.carousel"
            }
        ]
    }]
}
